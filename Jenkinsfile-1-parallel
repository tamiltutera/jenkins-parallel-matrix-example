pipeline {
  agent none
  stages {
    stage('BuildAndTest') {
      parallel {
        stage('windows') {
          agent {label 'windows'}
          stages {
            stage('Build') {
              steps {
                sh 'echo Do Build for windows'
              }
            }
            stage('Test') {
              steps {
                sh 'echo Do Test for windows'
              }
            }
          }
        }
        stage('linux') {
          agent {label 'linux'}
          stages {
            stage('Build') {
              steps {
                sh 'echo Do Build for linux'
              }
            }
            stage('Test') {
              steps {
                sh 'echo Do Test for linux'
              }
            }
          }
        }
      }
    }
  }
}
